generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Productos {
  id            Int              @id @default(autoincrement())
  nombre        String           @db.VarChar(40)
  precio_unidad Float            @db.Float
  id_categoria  Int
  categoria     Categorias       @relation(fields: [id_categoria], references: [id])
  pedidos       PedidoProducto[]
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  sessions Session[]
}

model Session {
  id               Int      @id @default(autoincrement())
  userId           Int
  device           String
  ip               String?
  refreshTokenHash String
  expiresAt        DateTime
  isValid          Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}


model Categorias {
  id        Int         @id @default(autoincrement())
  nombre    String      @db.VarChar(30)
  productos Productos[]
}

model Pedidos {
  id        Int              @id @default(autoincrement())
  clienteId Int
  cliente   Users            @relation("PedidosCliente", fields: [clienteId], references: [id])
  estado    String           @db.VarChar(30)
  fecha     DateTime         @default(now())
  total     Float            @db.Float
  productos PedidoProducto[]
}

model PedidoProducto {
  id         Int @id @default(autoincrement())
  pedidoId   Int
  productoId Int
  cantidad   Int

  pedido   Pedidos   @relation(fields: [pedidoId], references: [id])
  producto Productos @relation(fields: [productoId], references: [id])
}
