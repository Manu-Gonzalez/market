generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Productos {
  id            Int              @id @default(autoincrement())
  nombre        String           @db.VarChar(40)
  precio_unidad Float            @db.Float
  id_categoria  Int
  categoria     Categorias       @relation(fields: [id_categoria], references: [id])
  pedidos       PedidoProducto[]
}

model Users {
  id       Int            @id @default(autoincrement())
  username String         @unique
  email    String         @unique
  password String
  tokens   RefreshToken[]
  pedidos  Pedidos[]      @relation("PedidosCliente")
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      Users    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Categorias {
  id        Int         @id @default(autoincrement())
  nombre    String      @db.VarChar(30)
  productos Productos[]
}

model Pedidos {
  id        Int              @id @default(autoincrement())
  clienteId Int
  cliente   Users            @relation("PedidosCliente", fields: [clienteId], references: [id])
  estado    String           @db.VarChar(30)
  fecha     DateTime         @default(now())
  total     Float            @db.Float
  productos PedidoProducto[]
}

model PedidoProducto {
  id         Int @id @default(autoincrement())
  pedidoId   Int
  productoId Int
  cantidad   Int

  pedido   Pedidos   @relation(fields: [pedidoId], references: [id])
  producto Productos @relation(fields: [productoId], references: [id])
}
